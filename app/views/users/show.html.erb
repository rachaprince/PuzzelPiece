<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
   <div class="span8">
   <%= render 'shared/wallpost_form' %>
    <% if @user.wallposts.any? %>
      <h3>Wallposts (<%= @user.wallposts.count %>)</h3>
      <ol class="wallposts">
        <%= render @wallposts %>
      </ol>
      <%= will_paginate @wallposts %>
    <% end %>
  </div>
</div>