<% @user ||= current_user %>
<div class='team_stats'>
 
    <strong id="Ideas" class="stat">
      <%= @idea.requirements.count %> Skills
      
    </strong>
 </div>
 <div class="user">
 	<% skills = [] %>
 	<% @idea.requirements.each do |requirement| %>
 		<% skills.push(Skill.find(requirement.skill_id).name) %>
 	<% end %>
 	<% skills.each do |skill| %>
 		<div class="text-success">
 		<%= skill %>
 		</div>
 	<% end %>

 
 