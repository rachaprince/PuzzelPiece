<% provide(:title, 'Create Idea') %>
<h1>Create Idea</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@idea) do |f| %>
      <%= render 'fields', f: f %>
      <%= render 'shared/checkbox_form' %>
      <%= f.submit "Create my idea", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>