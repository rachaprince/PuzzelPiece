<p>
  <strong>Title:</strong>
  <%= @wall.name %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @wall.description %>
</p>

<h2>Add a post:</h2>
<%= form_for([@wall, @wall.wallposts.build]) do |f| %>
  <p>
    <%= f.label :post %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', walls_path %>
| <%= link_to 'Edit', edit_wall_path(@wall) %>

<h2>Posts</h2>
<% @wall.wallposts.each do |wallpost| %>
 
  <p>
    <strong>wallpost:</strong>
    <%= wallpost.content %>
  </p>
<% end %>