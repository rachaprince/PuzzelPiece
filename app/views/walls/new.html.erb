<% provide(:title, 'New Wall') %>
<h1>New Wall</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for :wall, url: walls_path do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create my Wall", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>